
<%- include('partsadmin/top')%>
    <!-- Sidebar -->
    <%- include('partsadmin/sidebar')%>
    <!-- Sidebar -->
    <div id="content-wrapper" class="d-flex flex-column">
      <div id="content">
        <!-- TopBar -->
        <%- include('partsadmin/navbar')%>
        <!-- Topbar -->

        <!-- Container Fluid-->
        <div class="container-fluid" id="container-wrapper">
            <div class="d-sm-flex align-items-center justify-content-between mb-4">
              <h1 class="h3 mb-0 text-gray-800">DataTables</h1>
              <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="./">Home</a></li>
                <li class="breadcrumb-item">Tables</li>
                <li class="breadcrumb-item active" aria-current="page">DataTables</li>
              </ol>
            </div>
  
            <!-- Row -->
            <div class="row">
              <!-- User Table -->
              <div class="col-lg-12">
                <div class="card mb-4">
                  <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Reservation Tables</h6>
                  </div>
                  <div class="table-responsive p-3">
                    <table class="table align-items-center table-flush table-hover" id="dataTableHover">
                      <thead class="thead-light">
                        <tr>
                          <th >Reserver par</th>
                          <th >Salle Name</th>
                          <th >Date de réservation</th>
                          <th >date de réservation de la Salle</th>
                          <th >Heures de Debut</th>
                          <th >Heures de Fin</th>
                          <th >Actions</th>
                        </tr>
                      </thead>
                      <tfoot>
                        <tr>
                          
                          <th >Reserver par</th>
                          <th >Salle Name</th>
                          <th >Date de réservation</th>
                          <th >date de réservation de la Salle</th>
                          <th >Heures de Debut</th>
                          <th >Heures de Fin</th>
                          <th >Actions</th>
                        </tr>
                      </tfoot>
                      <tbody>

                        <% for (let res of Reservations) {%>
                          <tr>
                          <td><a href="/reservation/<%= res._id %>" target="_blank"><h5><%= res.userId.name %></h5></a></td>
                          <td><a href="/mySalles/update/<%= res.salleId._id%>" target="_blank"><h5><%=res.salleId.name %></h5></a></td>
                          
                          <td><%= res.dateDeRse.toDateString() %></td>
                          <td><%= res.dateARes.toDateString() %></td>
                          <td><%= res.heureDebut %></td>
                          <td><%= res.heureFin %></td>
                           <td>
                            <a href="/myReservation/delete/<%=res._id%>" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                            <a href="/myReservation/update/<%=res._id%>" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                            <% if (res.valider==0) {%> <a href="/myReservation/valider/<%=res._id%>" class="btn btn-success"><i class="fas fa-check-circle"></i> </a><% } %>
                            <% if (res.valider==1) {%> <a href="" class="btn btn-info"><i class="fas fa-check-circle">Done</i> </a><% } %>
                           </td>
                          <% } %>
                         
                        
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
              <!-- salle tables -->
             
             
            </div>
            <!--Row-->
  
          
  
            <!-- Modal Logout -->
            <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabelLogout"
              aria-hidden="true">
              <div class="modal-dialog" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabelLogout">Ohh No!</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <div class="modal-body">
                    <p>Are you sure you want to logout?</p>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-outline-primary" data-dismiss="modal">Cancel</button>
                    <a href="/" class="btn btn-primary">Logout</a>
                  </div>
                </div>
              </div>
            </div>
  
          </div>
        <!---Container Fluid-->
     
  </div>

  <%- include('partsadmin/bottom')%>